{
  "manifest_version": 2,
  "name": "Ashuvidz Chrome Extension",
  "version": "0.1.0",
  "description": "C'est une extension qui permet d'être notifié quand Ashuvidz est en live",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  },
  "homepage_url": "http://ashuvidz.com",
  "permissions": ["storage", "alarms" , "activeTab"],
  "browser_action": {
    "default_title": "Ashuvidz",
    "default_icon": "icons/icon-48.png"
  }
}
